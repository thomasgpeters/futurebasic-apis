/*  NSLogProgress  NSLog's built-in progress bar has a range of 0.0 to 100.0.  Any negative value resets and hides the progress bar.*/include "NSLog.incl"_window = 1begin enum 1_startBtnend enumvoid local fn BuildWindowwindow _window, @"NSLogProgress", (0,0,480,360)button _startBtn,,, @"Start", (14,13,70,32)end fnvoid local fn DoSomethingbutton _startBtn, NO// disable start buttonNSLogCleardispatchglobalNSInteger indexfor index = 0 to 100NSLog(@"\t%ld\b",index)NSLogProgressSetValue(index)delay 50nextNSLogProgressSetValue(-1)// hide the progress bardispatchmainbutton _startBtn, YES// enabled start buttondispatchenddispatchendend fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _btnClickselect ( tag )case _startBtn : fn DoSomethingend selectend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents