/*  throw demo*/include "NSLog.incl"void local fn CheckContentsOfString( string as CFStringRef )ExceptionRef eCFStringRef  goodStringtryNSLog(@"string = \"%@\"",string)if ( fn StringContainsString( string, @"-" ) )e = fn ExceptionWithName( @"Bad String", @"String cannot contain a \"-\" character", NULL )throw e	 // this is identical to calling ExceptionRaise( e )end if// we only get here when no exceptionNSLog(@"  No exception")goodString = stringend trycatch ( e )NSLog(@"  %@: %@",fn ExceptionName(e),fn ExceptionReason(e))// fix the error heregoodString = fn StringByReplacingOccurrencesOfString( string, @"-", @" " )end catchfinallyNSLog(@"  Good string: \"%@\"\n",goodString)end finallyend fnfn CheckContentsOfString( @"my-string" )fn CheckContentsOfString( @"another string" )HandleEvents