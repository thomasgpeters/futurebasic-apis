include "NSLog.incl"void local fn AvailableFontsByFamilyCFArrayRef availableFamilies = fn FontManagerAvailableFontFamiliesCFMutableStringRef mutStr = fn MutableStringNewMutableStringAppendFormat( mutStr, @"\nFont face availability for installed fonts:\n\n" )for CFStringRef fontFamily in availableFamiliesMutableStringAppendFormat( mutStr, @"Family: %@\n", fontFamily )CFArrayRef availableFaces = fn FontManagerAvailableMembersOfFontFamily( fontFamily )for CFArrayRef fontFace in availableFacesMutableStringAppendFormat( mutStr, @"\t\t%@\n", fontFace[0] ) // Lists available faces by name// MutableStringAppendFormat( mutStr, @"\t\t%@\n", fontFace[1] ) // Lists style of facenextMutableStringAppendFormat( mutStr, @"\n" )nextNSLog( @"%@", mutStr )NSLogScrollToTopend fnfn AvailableFontsByFamilyHandleEvents