/*  Hyperlink 1  Ken Shmidheiser 20230411  A close translation of an Apple example.  As with Apple's example, it has a slight imperfection:    The cursor changes to iBeam over the field. A pointing hand would be more appropriate*/_window = 1begin enum 1_hyperlinkFieldend enumlocal fn MakeTextFieldHyperlink( tag as long )CFMutableAttributedStringRef               aString = fn MutableAttributedStringWithString( @"FutureBasic Home Page" )MutableAttributedStringBeginEditing(       aString )MutableAttributedStringSetLink(            aString, fn URLWithString( @"https://www.brilorsoftware.com/fb" ) )MutableAttributedStringSetForegroundColor( aString, fn ColorBlue )MutableAttributedStringSetUnderline(       aString, NSUnderlineStyleSingle )MutableAttributedStringSetAlignment(       aString, NSTextAlignmentCenter  )MutableAttributedStringSetFont(            aString, fn FontLabelFontOfSize( fn FontSystemFontSizeForControlSize(fn ControlSize(tag))))MutableAttributedStringEndEditing(         aString )ControlSetAttributedStringValue(      tag, aString )end fnvoid local fn BuildWindowCGRect r = fn CGRectMake( 0, 0, 400, 150 )window _window, @"TextField Hyperlink", r, NSWindowStyleMaskTitled + NSWindowStyleMaskClosable + NSWindowStyleMaskMiniaturizabler = fn CGRectMake( 20, 70, 360, 32 )textlabel _hyperlinkField,, rTextFieldSetSelectable( _hyperlinkField, YES )TextFieldSetAllowsEditingTextAttributes( _hyperlinkField, YES )fn MakeTextFieldHyperlink( _hyperlinkField )end fnvoid local fn DoDialog( ev as long )select ( ev )case _windowWillClose : endend selectend fnon dialog fn DoDialogfn BuildWindowHandleEvents