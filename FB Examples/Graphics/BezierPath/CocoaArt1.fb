/*Demonstrates cocoa artWritten by S.Van Voorst      {20171124}*/_window = 1_wndW = 950_wndH = 700begin enum 1_view_scrlView_quitBtnend enumvoid local fn ViewDrawShapes( tag as NSInteger )CGFloat   degBezierPathFillRect( fn ViewBounds( tag ), fn ColorWhite )for deg = 0 to 359BezierPathStrokeRotatedRect( fn CGRectMake( 0, 0, 100, 100), 225, 175, deg, 1.0, NULL )BezierPathStrokeRotatedRect( fn CGRectMake( 50, 50, 100, 100), 250, 575, deg, 1.0, NULL )BezierPathStrokeRotatedRect( fn CGRectMake( 0, 0, 100, 150), 725, 625, deg, 0.5, NULL )BezierPathStrokeRotatedRect( fn CGRectMake( 0, 0, 150, 150), 625, 225, deg, 1.0, NULL )next degend fnvoid local fn BuildWindowlong   wndStyleMaskwndStyleMask = NSWindowStyleMaskTitledwndStyleMask += NSWindowStyleMaskClosablewndStyleMask += NSWindowStyleMaskMiniaturizablewndStyleMask += NSWindowStyleMaskResizable// **** Window **** //window _window, @"Cocoa Basic Shapes", ( 0, 0, _wndW, _wndH ), wndStyleMask// **** Scroll View with View **** //scrollview _scrlView, ( 0, 50, _wndW, _wndH - 50)subclass view _view, ( 0, 0, _wndW, 900)ViewSetFlipped(_view, YES)ScrollViewSetDocumentView( _scrlView, _view )ViewSetAutoresizingMask( _scrlView, NSViewWidthSizable + NSViewHeightSizable )// **** Quit Btn **** //button _quitBtn, , , @"Q", (_wndW - 50, 10, 40, 40),, NSBezelStyleCircularViewSetAutoresizingMask( _quitBtn, NSViewMinXMargin + NSViewMaxYMargin )ControlSetAction( _quitBtn, @"terminate:" )end fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _viewDrawRect : fn ViewDrawShapes(tag)end selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents