/*  DecimalNumber3*/_window = 1begin enum 1_dollarLabel_priceFld_timesLabel_qtyFld_floatCostLabel_floatCostFld_decimalCostLabel_decimalCostFld_calcBtnend enumvoid local fn CalcActionCFStringRef        priceString, qtyString, costStringfloat              price, qty, costDecimalNumberRef   priceDcm, qtyDcm, costDcmpriceString = fn ControlStringValue( _priceFld )qtyString = fn ControlStringValue( _qtyFld )price = fn StringFloatValue( priceString )qty = fn StringFloatValue( qtyString)cost = price * qtyControlSetDoubleValue( _floatCostFld, cost )priceDcm = fn DecimalNumberWithString( priceString )qtyDcm = fn DecimalNumberWithString( qtyString )costDcm = fn DecimalNumberByMultiplyingBy( priceDcm, qtyDcm )cost = fn DecimalNumberDoubleValue( costDcm )costString = fn StringWithFormat(@"%@",costDcm)ControlSetStringValue( _decimalCostFld, costString )end fnvoid local fn BuildWindowwindow _window, @"Float vs DecimalNumber", (0,0,560,167)textlabel _dollarLabel, @"$", (18,128,116,17)ControlSetAlignment( _dollarLabel, NSTextAlignmentRight )textfield _priceFld,, @"52.35", (140,125,98,22)ControlSetFormat( _priceFld, @"0123456789.", YES, 0, 0 )textlabel _timesLabel, @"x", (243,128,11,17)textfield _qtyFld,, @"13", (263,125,54,22)ControlSetFormat( _qtyFld, @"0123456789.", YES, 0, 0 )textlabel _floatCostLabel, @"Float = $", (18,97,116,17)ControlSetAlignment( _floatCostLabel, NSTextAlignmentRight )textfield _floatCostFld,,, (140,94,400,22)TextFieldSetEditable( _floatCostFld, NO )textlabel _decimalCostLabel, @"DecimalNumber $", (18,65,116,17)ControlSetAlignment( _decimalCostLabel, NSTextAlignmentRight )textfield _decimalCostFld,,, (140,62,400,22)TextFieldSetEditable( _decimalCostFld, NO )button _calcBtn,,, @"Calc", (247,13,67,32)ButtonSetKeyEquivalent( _calcBtn, @"\r" )ControlSetActionCallback( _calcBtn, @fn CalcAction, NULL )end fnfn BuildWindowHandleEvents