include resources "Arrows.png"void local fn BuildWindowwindow 1, @"Split View", (0,0,550,400)/*  subclass in order to trigger dialog events    _splitViewDividerThickness    _splitViewDrawDividerInRect*/subclass splitview 1, (0,0,550,400)SplitViewSetDividerStyle(1,NSSplitViewDividerStyleThick)ViewSetAutoresizingMask( 1, NSViewWidthSizable + NSViewHeightSizable )button 2,,,, (230,142,81,32)SplitViewAddSubview( 1, 0, 2 )textfield 3,,, (20,157,96,22)SplitViewAddSubview( 1, 1, 3 )end fnvoid local fn DoDialog( ev as long, tag as long )CGFloat   midX, midYCGRect    rImageRef  imageselect ( ev )case _splitViewDividerThicknessDialogEventSetDouble( 30.0 )case _splitViewDrawDividerInRectr = fn DialogEventRectimage = fn ImageNamed( @"Arrows" )midX = fn CGRectGetMidX( r )midY = fn CGRectGetMidY( r )BezierPathStrokeLine( fn CGPointMake(r.origin.x,midY), fn CGPointMake(midX-15,midY), 2, fn ColorLightGray )BezierPathStrokeLine( fn CGPointMake(midX+15,midY), fn CGPointMake(r.origin.x+r.size.width,midY), 2, fn ColorLightGray )r = fn CGRectMake( midX-14, midY-14, 28, 28 )ImageDrawInRect( image, r )DialogEventSetBool(YES)// we handledend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents