/*  RadioGroups  To have radio buttons work in a radio group, they must have the same action method and have the same superview.  When these conditions are met, checking one button will uncheck all other buttons.    This demo shows:    • how to put radio buttons in the same superview using ViewAddSubview    • how to put radio buttons in a superview using the superview keyword    • how to change the action method with ControlSetActionID*/_window1 = 1_window2 = 2_window3 = 3begin enum 1_radioGroup1 // group view_radio101_radio102_radio103_radio104_radio105_radioGroup2 // group view_radio201_radio202_radio203end enum// actionIDs (must be in the range 1-10)begin enum 1_actionID1_actionID2end enumvoid local fn BuildWindow1window _window1, @"Radio Groups - ViewAddSubview", (25,700,386,220)view _radioGroup1, (0,76,125,144)radiobutton _radio101,, NSControlStateValueOn, @"Radio 101", (18,107,88,18)radiobutton _radio102,,, @"Radio 102", (18,85,88,18)radiobutton _radio103,,, @"Radio 103", (18,63,88,18)radiobutton _radio104,,, @"Radio 104", (18,41,88,18)radiobutton _radio105,,, @"Radio 105", (18,19,88,18)ViewAddSubviews( _radioGroup1, _radio101, _radio102, _radio103, _radio104, _radio105, 0 )// must be zero-terminatedview _radioGroup2, (0,0,386,56)radiobutton _radio201,,, @"Radio 201", (18,19,88,18)radiobutton _radio202,, NSControlStateValueOn, @"Radio 202", (148,19,88,18)radiobutton _radio203,,, @"Radio 203", (278,19,88,18)ViewAddSubviews( _radioGroup2, _radio201, _radio202, _radio203, 0 )// must be zero-terminatedend fnvoid local fn BuildWindow2window _window2, @"Radio Groups - superview", (450,700,386,220)superview view _radioGroup1, (0,76,125,144)radiobutton _radio101,, NSControlStateValueOn, @"Radio 101", (18,107,88,18)radiobutton _radio102,,, @"Radio 102", (18,85,88,18)radiobutton _radio103,,, @"Radio 103", (18,63,88,18)radiobutton _radio104,,, @"Radio 104", (18,41,88,18)radiobutton _radio105,,, @"Radio 105", (18,19,88,18)superviewendsuperview view _radioGroup2, (0,0,386,56)radiobutton _radio201,,, @"Radio 201", (18,19,88,18)radiobutton _radio202,, NSControlStateValueOn, @"Radio 202", (148,19,88,18)radiobutton _radio203,,, @"Radio 203", (278,19,88,18)superviewendend fnvoid local fn BuildWindow3window _window3, @"Radio Groups - ActionID", (875,700,386,220)radiobutton _radio101,, NSControlStateValueOn, @"Radio 101", (18,183,88,18)radiobutton _radio102,,, @"Radio 102", (18,161,88,18)radiobutton _radio103,,, @"Radio 103", (18,139,88,18)radiobutton _radio104,,, @"Radio 104", (18,117,88,18)radiobutton _radio105,,, @"Radio 105", (18,95,88,18)ControlRangeSetActionID( fn CFRangeMake(_radio101,5), _actionID1 )radiobutton _radio201,,, @"Radio 201", (18,19,88,18)radiobutton _radio202,, NSControlStateValueOn, @"Radio 202", (148,19,88,18)radiobutton _radio203,,, @"Radio 203", (278,19,88,18)ControlRangeSetActionID( fn CFRangeMake(_radio201,3), _actionID2 )end fnfn BuildWindow3fn BuildWindow2fn BuildWindow1HandleEvents