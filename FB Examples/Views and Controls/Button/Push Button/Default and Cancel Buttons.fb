include "NSLog.incl"_window = 1begin enum 1_okBtn_cancelBtnend enumvoid local fn BuildWindowwindow _window, @"Default & Cancel Buttons", (0,0)-(480,270)// a button given a title of "OK" (uppercase) is made the default (responds to return/enter)button _okBtn,,, @"OK", (384,13,82,32)ViewSetAutoresizingMask( _okBtn, NSViewMinXMargin + NSViewMaxYMargin )// a button given a title of "Cancel" (case sensitive) is made the cancel button (responds to esc and cmd-.)button _cancelBtn,,, @"Cancel", (302,13,82,32)ViewSetAutoresizingMask( _cancelBtn, NSViewMinXMargin + NSViewMaxYMargin )end fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _btnClickselect ( tag )case _okBtn : NSLog(@"OK button clicked")case _cancelBtn : NSLog(@"Cancel button clicked")end selectend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents