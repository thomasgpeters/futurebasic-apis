/*   SearchField w menu   Bernie Wylde 20180405   mac 10.10+   Note: SearchField menu items do NOT trigger a user on menu function*/include "NSLog.incl"_mSearch = 101begin enum_iClear__iRecentSearches_iRecentsend enum_window = 1begin enum 1_searchFldend enumvoid local fn BuildSearchMenuTemplatemenu _mSearchmenu _mSearch, _iClear,, @"Clear"MenuItemSetTag( _mSearch, _iClear, NSSearchFieldClearRecentsMenuItemTag )menu _mSearch, _iRecentSearches,, @"Recent Searches"MenuItemSetTag( _mSearch, _iRecentSearches, NSSearchFieldRecentsTitleMenuItemTag )menu _mSearch, _iRecents,, @"Recents"MenuItemSetTag( _mSearch, _iRecents, NSSearchFieldRecentsMenuItemTag )end fnlocal fn BuildWindowwindow _window, @"Search Field with Menu", (0,0,240,62)searchfield _searchFld,,, (20,20,200,22)SearchFieldSetSearchMenuTemplate( _searchFld, _mSearch )SearchFieldSetMaximumRecents( _searchFld, 10 )end fneditmenu 1fn BuildSearchMenuTemplatefn BuildWindowHandleEvents