_window = 1begin enum 1_label_stepperend enumvoid local fn BuildWindowwindow _window, @"Stepper", (0,0,350,200)textlabel _label, @"0", (148,92,24,17)ControlSetAlignment( _label, NSTextAlignmentRight )// params: tag, enabled, value, rect, min, max, wndTagstepper _stepper,,, (175,86,19,27),, 25ControlSetContinuous( _stepper, YES )StepperSetValueWraps( _stepper, YES )end fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _btnClickselect ( tag )case _stepperControlTakeIntegerValueFrom( _label, _stepper )end selectend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents