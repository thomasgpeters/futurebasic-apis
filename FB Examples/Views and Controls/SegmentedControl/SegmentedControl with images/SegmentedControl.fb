// macOS 10.12+include resources "top.png"include resources "middle.png"include resources "bottom.png"void local fn BuildWindowwindow 1, @"Segmented Controls", (0,0,400,300)segmentedcontrol 1,,, (20,140,96,27), 3SegmentedControlSetTrackingMode( 1, NSSegmentSwitchTrackingSelectAny )SegmentedControlSetSegment( 1, 0, YES, NULL, fn ImageNamed(@"NSTouchBarTextBoldTemplate"), 0, 30 )SegmentedControlSetSegment( 1, 1, YES, NULL, fn ImageNamed(@"NSTouchBarTextItalicTemplate"), 0, 30 )SegmentedControlSetSegment( 1, 2, YES, NULL, fn ImageNamed(@"NSTouchBarTextUnderlineTemplate"), 0, 30 )segmentedcontrol 2,, 0, (130,140,128,27), 4SegmentedControlSetSegment( 2, 0, YES, NULL, fn ImageNamed(@"NSTouchBarTextLeftAlignTemplate"), 0, 30 )SegmentedControlSetSegment( 2, 1, YES, NULL, fn ImageNamed(@"NSTouchBarTextCenterAlignTemplate"), 0, 30 )SegmentedControlSetSegment( 2, 2, YES, NULL, fn ImageNamed(@"NSTouchBarTextRightAlignTemplate"), 0, 30 )SegmentedControlSetSegment( 2, 3, YES, NULL, fn ImageNamed(@"NSTouchBarTextJustifiedAlignTemplate"), 0, 30 )segmentedcontrol 3,, 0, (20,90,96,27), 3// note: these images do not turn white when selectedSegmentedControlSetSegment( 3, 0, YES, NULL, fn ImageNamed(@"top"), 0, 30 )SegmentedControlSetSegment( 3, 1, YES, NULL, fn ImageNamed(@"middle"), 0, 30 )SegmentedControlSetSegment( 3, 2, YES, NULL, fn ImageNamed(@"bottom"), 0, 30 )end fnfn BuildWindowHandleEvents