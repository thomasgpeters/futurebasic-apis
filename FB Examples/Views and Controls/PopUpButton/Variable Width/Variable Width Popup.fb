_window = 1begin enum 1_popupBtn1_popupBtn2end enumvoid local fn FixPopupWidth( tag as long )ViewSetFrameSize( tag, fn ViewIntrinsicContentSize( tag ) )end fnvoid local fn BuildWindowwindow _window, @"Variable Width PopUpButton", (0,0,438,240)popupbutton _popupBtn1,, 1, @"Ae;Llanfairpwllgwyngyllgogerychwyrndrobwllllantysiliogogogoch;Crackpot", (20,200,398,20)ButtonSetBordered( _popupBtn1, NO )popupbutton _popupBtn2,, 1, @"Ae;Llanfairpwllgwyngyllgogerychwyrndrobwllllantysiliogogogoch;Crackpot", (20,170,398,20)ButtonSetBordered( _popupBtn2, NO )end fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _btnClickselect ( tag )case _popupBtn2 : fn FixPopupWidth( tag )end selectend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents