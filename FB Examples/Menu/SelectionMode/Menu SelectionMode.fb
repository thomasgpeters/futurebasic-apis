include "NSLog.incl"void local fn BuildMenumenu 1,,, @"MyMenu"menu 1,0,, @"Item 1"menu 1,1,, @"Item 2"menu 1,2,, @"Item 3"menu 1,3,, @"Item 4"MenuSetSelectionMode( 1, NSMenuSelectionModeSelectOne )MenuItemSetState( 1, 0, NSControlStateValueOn )end fnvoid local fn BuildWindowwindow 1print @"Choose an item in MyMenu"end fnvoid local fn DoMenu( menuID as long, itemID as long )print fn MenuTitle(menuID)@" - "fn MenuItemTitle(menuID,itemID)end fnfn BuildMenufn BuildWindowon menu fn DoMenuHandleEvents