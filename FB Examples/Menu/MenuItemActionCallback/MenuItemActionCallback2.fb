/*  MenuItemActionCallback  all items in a menu*/include "NSLog.incl"void local fn MyMenuItemCallback( menuID as NSInteger, itemID as NSInteger )NSLog(@"menu: \"%@\", item: \"%@\"",fn MenuTitle(menuID),fn MenuItemTitle(menuID,itemID))end fnvoid local fn BuildMenumenu 1,,1,@"File"menu 1,0,1,@"New…",@"n"menu 1,1,1,@"Open…",@"o"// params: menuID, itemID (-1 = call callback on all the menu's items), callback fn, userDataMenuItemSetActionCallback( 1, -1, @fn MyMenuItemCallback, NULL )end fnvoid local fn BuildWindowwindow 1, @"Choose a menu item", (0,0,300,100), NSWindowStyleMaskTitledend fnfn BuildMenufn BuildWindowHandleEvents