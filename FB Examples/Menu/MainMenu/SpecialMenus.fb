begin enum 1_mFile_mEdit_mFormat_mView_mWindow_mHelpend enum_mFind = 101// we want the find menu to be a submenu of the edit menu's find itembegin enum 9_iFindend enum_window1 = 1begin enum 1_scrollView_textViewend enum_toolbar = 1begin enum 1_colorsItem_fontsItemend enum_window2 = 2begin enum 1_btnend enumvoid local fn BuildMenus// filefilemenu _mFile// edit + findeditmenu _mEditmenu _mEdit, _iFind,, @"Find"findmenu _mFindMenuSetSubmenu( _mEdit, _iFind, _mFind )// format (font + text)formatmenu _mFormat// viewviewmenu _mView// windowwindowmenu _mWindow// helphelpmenu _mHelpend fnvoid local fn BuildWindowswindow _window1, @"Special Menus", (0,0,550,400)//WindowSetToolbarStyle( _window1, NSWindowToolbarStyleExpanded )// macOS 11.0+toolbar _toolbarToolbarSetAllowsUserCustomization( _toolbar, YES )toolbaritem _colorsItem, NSToolbarShowColorsItemIdentifiertoolbaritem _fontsItem, NSToolbarShowFontsItemIdentifierWindowSetToolbar( _window1, _toolbar )scrollview _scrollView, (0,0,550,400)ViewSetAutoresizingMask( _scrollView, NSViewWidthSizable + NSViewHeightSizable )textview _textView,, _scrollViewTextViewSetUsesFindBar( _textView, YES )end fnfn BuildMenusfn BuildWindowsHandleEvents