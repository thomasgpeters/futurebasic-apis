/*Overriding edit menu actions. From a list post on 3-Sept-2018by Bernie W.By default, standard Edit menu items (cut, copy, paste, etc) trigger standard actions so wonâ€™t find their way to FB's user on menu function.However, actions can be overridden.*/include "NSLog.incl"_mFile = 1begin enum_iOpenend enum_mEdit = 2begin enum_iUndo_iRedo__iCut_iCopy_iPaste_iDelete_iSelectAllend enumbegin enum output 1_windowend enumbegin enum output 1_scrollView_textViewend enumvoid local fn MyPasteActionNSLog(@"MyPasteAction")// do somethingTextPaste( _textView )end fnvoid local fn BuildMenusmenu _mFile,,, @"File"menu _mFile, _iOpen,, @"Open", @"o"editmenu _mEditMenuItemSetActionCallback( _mEdit, _iPaste, @fn MyPasteAction, NULL )end fnvoid local fn BuildWindowwindow _window,, (0,0,480,360), NSWindowStyleMaskTitledscrollview _scrollView, (20,20,440,320), NSBezelBordertextview _textView,, _scrollViewWindowMakeFirstResponder( _window, _textView )end fnvoid local fn DoMenu( menuID as long, itemID as long )select ( menuID )case _mFileselect ( itemID )case _iOpenend selectend selectend fnfn BuildMenusfn BuildWindowon menu fn DoMenuHandleEvents