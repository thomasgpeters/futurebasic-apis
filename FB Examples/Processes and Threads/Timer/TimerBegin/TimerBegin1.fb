include "NSLog.incl"/*  timerbegin    syntax:      [t =] timerbegin [fireDate [, timeInterval [, repeats ]]]      params:        fireDate				- CFDateRef or double (seconds from now)        timeInterval	- double        repeats				- boolean      return value:        t							- TimerRef  timerend    no params, no return value*/void local fn DoIt// (1)timerbegin , 5.0		// fires once after five secondsNSLogSetTextColor( fn ColorRed )NSLog(@"timer 1 fired")timerend// (2)timerbegin , 1.0, YES		// fires every secondNSLogSetTextColor( fn ColorGreen )NSLog(@"timer 2 fired")timerend// (3)timerbegin 3.0 // fires 3 seconds from nowNSLogSetTextColor( fn ColorBlue )NSLog(@"timer 3 fired")timerend// (4)block long counter = 0	block TimerRef t4 = timerbegin fn DateWithTimeIntervalSinceNow(4.0), 1.0, YES// fires 4 seconds from now, then every second for another 9 secondsNSLogSetTextColor( fn ColorMagenta )NSLog(@"timer 4 fired (%ld)",counter)counter++if ( counter == 10 ) then TimerInvalidate( t4 )// invalidate after firing 10 timestimerendend fnfn DoItHandleEvents