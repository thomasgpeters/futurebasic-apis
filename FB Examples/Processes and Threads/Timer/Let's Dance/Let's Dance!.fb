SetSelectable(           _txtField, NO                                )TextFieldSetMaximumNumberOfLines( _txtField, 3                                 )TextFieldSetTextColor(            _txtField, fn ColorRed                       )TextFieldSetBackgroundColor(      _txtField, fn ColorBlack                     )TextSetFontWithName(              _txtField, @"Courier", 140.0                 )TextSetAlignment(                 _txtField, NSTextAlignmentCenter             )ViewPropertySet(                  _txtField, @"music", fn LoadMusic            )ViewPropertySet(                  _txtField, @"array", fn LoadDancerArray      )ViewPropertySet(                  _txtField, @"index", fn NumberWithInteger(0) )r = fn CGRectMake( 20, 15, 160, 24 )button _startBtn,,, @"Let's Dance!", r,,NSBezelStyleTexturedSquareButtonSetTitleColor( _startBtn, fn ColorGreen )end fnvoid local fn SetTextCFStringRef tempStrCFArrayRef  mutArrNSInteger   ii = fn NumberIntegerValue( fn ViewProperty( _txtField, @"index" ) )mutArr = (CFArrayRef)fn ViewProperty( _txtField, @"array" )tempStr = fn ArrayObjectAtIndex( mutArr, i )ControlSetStringValue( _txtField, tempStr )i++ViewPropertySet( _txtField, @"index", fn NumberWithInteger( i ) )end fnvoid local fn StartTimerTimerRef newTimerif( gStopped == YES )newTimer = fn TimerScheduledWithInterval( 0.165, @fn SetText, NULL, YES )gAppTimer = newTimerTimerFire( gAppTimer )gStopped = NOelseTimerInvalidate( gAppTimer )newTimer = fn TimerScheduledWithInterval( 0.165, @fn SetText, NULL, YES )gAppTimer = newTimergStopped = NOend ifend fnvoid local fn PrepareToPlaySoundRef musicControlSetStringValue( _txtField, @"" )TextSetFontWithName( _txtField, @"Courier", 58.0 )ViewPropertySet( _txtField, @"index", @0 )music = fn ViewProperty( _txtField, @"music" )if fn SoundIsPlaying( music ) then fn SoundStop( music )SoundSetCurrentTime( music, 0 )fn SoundPlay( music )fn StartTimerend fnvoid local fn DoDialog( ev as long, tag as long, wnd as long )select (ev)case _btnClickselect (tag)case _startBtn : fn PrepareToPlayend selectcase _windowWillClose : endend selectend fnon dialog fn DoDialogfn BuildWindowHandleEvents