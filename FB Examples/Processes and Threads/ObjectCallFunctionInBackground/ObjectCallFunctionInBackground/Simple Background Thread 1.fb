/*  Simple Background Thread 1  Bernie Wylde 20180306*/include "NSLog.incl"_mainWindow = 1_busyWindow = 2// main thread functionvoid local fn FinishedWindowClose(_busyWindow)beepNSLog(@"Finished!")end fn// background functionvoid local fn BackgroundFunctionlong ifor i = 0 to 100delay 20next iObjectCallFunctionOnMainThread( @fn Finished, NULL, NO )end fn// show busy window and call background functionpanel _busyWindow, @"Busy", (0,0,280,57)textlabel 1, @"This may take some time...", (18,20,244,17)ObjectCallFunctionInBackground( @fn BackgroundFunction, NULL )// build main windowwindow _mainWindow, @"Main Window", (0,0,550,400)button 1HandleEvents