/*   From a list post   by Ken S. and Bernie W. August 2018*/_mainWnd = 1begin enum 1_imageViewend enum_overlayWnd = 2begin enum 1_scrollView_textViewend enumvoid local fn BuildMainWindowwindow _mainWnd, @"Main Window", (0,0,600,450)WindowSetContentMinSize( _mainWnd, fn CGSizeMake(160,100) )imageview _imageView,, NSImageNameColorPanel, (20,20,560,410), NSImageScaleProportionallyUpOrDownend fnvoid local fn BuildOverlayWindowlong     wndStyleMaskCGRect   rwndStyleMask  = NSWindowStyleMaskTitledwndStyleMask += NSWindowStyleMaskBorderlessr = fn CGRectMake( 0, 0, 600, 450 )window _overlayWnd, @"", r, wndStyleMaskWindowSetTitlebarAppearsTransparent( _overlayWnd, YES )WindowSetOpaque( _overlayWnd, NO )WindowSetBackgroundColor( _overlayWnd, fn ColorClear )WindowSetHasShadow( _overlayWnd, NO )r = fn CGRectMake( 20, 20, 560, 410 )scrollview _scrollView, r//, NSLineBorderScrollViewSetHasVerticalScroller( _scrollView, NO )ScrollViewSetDrawsBackground( _scrollView, NO )ViewSetAutoresizingMask( _scrollView, NSViewWidthSizable + NSViewHeightSizable )textview _textView, r, _scrollViewTextViewSetDrawsBackground( _textView, NO )TextSetFontWithName( _textView, @"Helvetica", 60 )TextSetString( _textView, @"This is an example of an overlay window." )WindowMakeFirstResponder( _overlayWnd, _textView )WindowAddChildWindow( _mainWnd, _overlayWnd, NSWindowAbove )end fnvoid local fn DoDialog( ev as long, tag as long )select ( ev )case _windowDidResizeselect ( tag )case _mainWndWindowSetFrame( _overlayWnd, fn WindowFrame( tag ), YES, YES )end selectend selectend fnfn BuildMainWindowfn BuildOverlayWindowon dialog fn DoDialogHandleEvents