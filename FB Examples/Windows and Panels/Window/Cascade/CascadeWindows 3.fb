/*   CascadeWindows 3   from a demo by Steve Van Voorst*/begin enum 1_scrlView_txtViewend enumvoid local fn BuildMenumenu 1,,, @"File"menu 1, 0,, @"New Window", @"n"menu 1, 1,, @"Close", @"w"MenuItemSetAction( 1, 1, @"performClose:")MenuSetAutoenablesItems( 1, YES )end fnvoid local fn BuildWindowNSInteger tag = 1while ( fn WindowExists( tag ) )tag++wendCFStringRef title = fn StringWithFormat(@"Window %d", tag)window tag, title, (0,0,320,240)WindowCascadeTopLeftFromNextWindow(tag)scrollview _scrlView, ( 20, 20, 280, 200), NSBezelBordertextview _txtView,, _scrlViewViewSetAutoresizingMask( _scrlView, NSViewWidthSizable + NSViewHeightSizable )end fnvoid local fn DoMenu( menuID as long, itemID as long )select ( menuID )case 1select ( itemID )case 0 : fn BuildWindowend selectend selectend fnfn BuildMenufn BuildWindowon menu fn DoMenuHandleEvents