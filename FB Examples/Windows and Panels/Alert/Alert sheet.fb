include "NSLog.incl"void local fn ShowAlertalert -1,, @"Message", @"Info text", @"OK;Continue", YESAlertButtonSetKeyEquivalent( 1, 1, @"\e" )alert 1end fnvoid local fn BuildWindowwindow 1, @"Alert Sheet", (0,0,550,400)button 1,,, @"Show Alert", (14,13,106,32)end fnvoid local fn DoDialog( ev as long, tag as long, wnd as long )select ( ev )case _btnClickselect ( tag )case 1 : fn ShowAlertend selectcase _alertDidEndselect ( tag )case NSAlertFirstButtonReturnNSLog(@"alert %ld OK",wnd)case NSAlertSecondButtonReturnNSLog(@"alert %ld Continue",wnd)end selectend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents