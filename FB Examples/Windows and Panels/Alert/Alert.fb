void local fn ShowAlertalert 14,, @"Alert message", @"Alert info."end fnvoid local fn BuildWindowwindow 1, @"Alert Demo", (0,0,550,400)button 1,,, @"Show Alert", (14,13,106,32)end fnvoid local fn DoDialog( ev as long, tag as long, wnd as long )select ( ev )case _btnClick    : cls : fn ShowAlertcase _alertDidEnd : printf %(200,180)@"alert %ld did end",wndend selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents