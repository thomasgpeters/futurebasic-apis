include "NSLog.incl"void local fn ShowAlert// add the suppression buttonAlertSetShowsSuppressionButton( 1, YES )// show the alertalert 1,, @"Hello", @"Something happened."end fnvoid local fn BuildWindowwindow 1, @"Alert Demo", (0,0,550,400)button 1,,, @"Show Alert", (14,13,106,32)end fnvoid local fn DoDialog( ev as long, id as long, wnd as long )select ( ev )case _btnClickselect ( id )case 1fn ShowAlertend selectcase _alertDidEndNSLog(@"SuppressionButtonState: %d",fn AlertSuppressionButtonState( wnd ))// store user choice somewhere (usually user defaults)end selectend fnfn BuildWindowon dialog fn DoDialogHandleEvents