/*  OpenPanel*/include "NSLog.incl"_window = 1_openBtn = 1_openPanel = 1void local fn ShowOpenPanel// params: tag, message, fileTypes, prompt, dirURL, sheetFlagCFURLRef url = openpanel _openPanel, @"Open a file"if ( url )NSLog(@"%@",url)elseNSLog(@"User cancelled")end ifend fnvoid local fn DoDialog( ev as long, tag as long, wnd as long )select ( ev )case _btnClickselect ( tag )case _openBtn : fn ShowOpenPanelend selectend selectend fnwindow _window, @"OpenPanel", (0,0,550,400)button _openBtn,,, @"Openâ€¦"on dialog fn DoDialogHandleEvents