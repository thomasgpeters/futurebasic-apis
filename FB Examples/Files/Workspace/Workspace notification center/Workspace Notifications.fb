include "NSLog.incl"void local fn MyNotification( note as NotificationRef )CFStringRef name = fn NotificationName( note )if ( fn StringIsEqual( name, NSWorkspaceWillSleepNotification ) )NSLog(@"You won't see this until you wake up but good night anyway.")elseNSLog(@"Good morning.")end ifend fnWorkspaceNotificationCenterAddObserver( @fn MyNotification, NSWorkspaceWillSleepNotification, NULL )WorkspaceNotificationCenterAddObserver( @fn MyNotification, NSWorkspaceDidWakeNotification, NULL )window 1,, (0,0,480,360)HandleEvents