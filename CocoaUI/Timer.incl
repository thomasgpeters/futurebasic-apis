/*  Timer.incl  Bernie Wylde 20180518  Framework: Foundation  Inherits from: Object  NSTimer - https://developer.apple.com/documentation/foundation/nstimer?language=objc  See also FB's 'timerbegin' keyword*/// Classtoolbox fn TimerClass = ClassRef// Create/*  TimerScheduledWithInterval, TimerWithInterval, TimerWithFireDate  callback example:    void local fn MyTimerCallback( t as TimerRef, userInfo as CFTypeRef )      // ...    end fn*/toolbox fn TimerScheduledWithInterval( CFTimeInterval ti, ptr callback, CFTypeRef userInfo, BOOL repeats ) = TimerReftoolbox fn TimerWithInterval( CFTimeInterval ti, ptr callback, CFTypeRef userInfo, BOOL repeats ) = TimerReftoolbox fn TimerWithFireDate( CFDateRef dt, CFTimeInterval ti, ptr callback, CFTypeRef userInfo, BOOL repeats ) = TimerRef// Firetoolbox TimerFire( TimerRef ref )// Stoptoolbox TimerInvalidate( TimerRef ref )// Infotoolbox fn TimerIsValid( TimerRef ref ) = BOOLtoolbox fn TimerFireDate( TimerRef ref ) = CFDateReftoolbox fn TimerTimeInterval( TimerRef ref ) = CFTimeIntervaltoolbox fn TimerUserInfo( TimerRef ref ) = CFTypeRef// Tolerancetoolbox fn TimerTolerance( TimerRef ref ) = CFTimeIntervaltoolbox TimerSetTolerance( TimerRef ref, CFTimeInterval ti )